easyblock = 'PythonPackage'

name = 'sinto'

version = '0.7.3.1'

versionsuffix = '-Python-%(pyver)s'

homepage = 'https://timoast.github.io/sinto/index.html'

description = """Sinto is a toolkit for processing aligned single-cell data. Sinto includes functions to:

    Subset reads from a BAM file by cell barcode

    Create a scATAC-seq fragments file from a BAM file

    Add read tags to a BAM file according to cell barcode information
"""

toolchain = {'name': 'foss', 'version': '2020b'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = ['c4f3c1413a5c5e2d3587654f7bf53669df883e4d77bb64a846bcbc3c74757c53']

dependencies = [
    ('Python', '3.8.6'),
    ('Pysam', '0.16.0.1'),
    ('SciPy-bundle', '2020.11'),
]

download_dep_fail = True
use_pip = True

sanity_check_commands = ['%(name)s --version']

moduleclass = 'bio'
